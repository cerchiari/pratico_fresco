<h1>New Order</h1>


<%= form_tag(orders_url, method: 'post') do %>


  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :nome), class: 'form-control' %> 
    
  </div>

  <div>
    <%= label_tag :status %><br />
    <%= text_field_tag :status %>
  </div>

  <div>
    <%= label_tag :data %><br />
    <%= text_field_tag :data %>
  </div>


  <div>
    <%= submit_tag "Create Order" %>
  </div>
<% end %>
