<h1>Editing Order #<%= @order.id %></h1>


<%= form_tag(order_url(@order), method: 'patch') do %>

  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :nome, @order.user_id), class: 'form-control' %> 
    
  </div>

  <div>
    <%= label_tag :status %><br />
    <%= text_field_tag :status, @order.status %>
  </div>

  <div>
    <%= label_tag :data %><br />
    <%= text_field_tag :data, @order.data %>
  </div>

  
  <div>
    <%= submit_tag "Update Order" %>
  </div>

<% end %>
